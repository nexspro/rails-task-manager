<h1>Edit task</h1>
<%= form_with model: @task, local: true do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :details %>
    <%= f.text_area :details %>
  </div>

  <div>
    <%= f.label :completed %>
    <%= f.check_box :completed %>
  </div>

  <div>
    <%= f.submit "Update Task" %>
  </div>
<% end %>
<%= link_to "Back to list", tasks_path %>
